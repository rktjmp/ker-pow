<ul class="apps">
	<% apps.each do |app| %>
			<li>
				<a href="<%= app[:link] %>" title="Go to <%= app[:name]%>">
					<div class="app-link"><%= app[:name] %></div>
				</a>
				<a href="/restart/<%= app[:name] %>" title="Restart <%= app[:name] %>">
					<div class="app-restart">restart</div>
				</a>
			</li>
		</a>
	<% end %>
</ul>

<a class="show-help" href="#">Pow help</a>
